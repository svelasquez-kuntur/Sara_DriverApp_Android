<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sara.driver.BankDetailActivity">

    <include
        android:id="@+id/headar_area"
        layout="@layout/design_toolbar_general"></include>

    <ScrollView
        android:layout_below="@+id/headar_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
       android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/headar_area"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <include
            android:id="@+id/vPaymentEmailBox"
            layout="@layout/editbox_form_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/vBankAccountHolderNameBox"
            layout="@layout/editbox_form_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/vAccountNumberBox"
            layout="@layout/editbox_form_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/vBankLocation"
            layout="@layout/editbox_form_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/vBankName"
            layout="@layout/editbox_form_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/vBIC_SWIFT_Code"
            layout="@layout/editbox_form_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/submitBtn"
            layout="@layout/btn_type_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"></include>

    </LinearLayout>
    </ScrollView>


</RelativeLayout>
