<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="5dp"
        app:cardElevation="1.5dp">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="12dp"
            android:paddingStart="22dp">

            <com.view.MTextView
                android:id="@+id/statusTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingTop="8dp"
                android:text="Active"
                android:textAlignment="viewEnd"
                android:textColor="#626262"
                android:textSize="@dimen/txt_size_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/vNameTxtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textAlignment="viewStart"
                        android:textColor="#272727"
                        android:textSize="@dimen/txt_size_18"
                        app:customTypeFace="roboto_medium" />

                    <com.view.MTextView
                        android:id="@+id/vOthInfoTxtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Info"
                        android:textAlignment="viewStart"
                        android:textColor="#323232"
                        android:textSize="@dimen/txt_size_15"
                        app:customTypeFace="roboto_light" />
                </LinearLayout>

                <ImageView
                    android:tint="@color/appThemeColor_1"
                    android:id="@+id/docImgView"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0"
                    android:background="#E8E8E8"
                    android:padding="6dp"
                    android:src="@mipmap/ic_v_doc" />

                <ImageView
                    android:id="@+id/editImgView"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0"
                    android:background="#E8E8E8"
                    android:padding="6dp"
                    android:src="@mipmap/ic_v_edit" />

                <ImageView
                    android:id="@+id/deleteImgView"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="0"
                    android:background="#E8E8E8"
                    android:padding="6dp"
                    android:src="@mipmap/ic_v_delete" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>